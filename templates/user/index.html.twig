{% extends 'base.html.twig' %}

{% block body %}
    <style>
        body{
            background-image: linear-gradient(0, rgba(0,0,0), rgba(0, 0, 0, 0.4)),
            url({{ asset('img/shoes.jpg') }});
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            height: 680px;
        }
        .cart__content th{
            text-align: center;
            color: #ff6600;
        }
        .cart__content td{
            text-align: center;
        }
        .cart__content .action{
            width: 30%;
        }

    </style>
    <section class="cart container">
        <table class="table table-bordered cart__content table-dark ">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Birthdate</th>
                <th scope="col">Phone</th>
                <th scope="col">Address</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for user in user %}
                <tr>
                    <th scope="row">{{ user.id }}</th>
                    <td>{{ user.name }}</td>
                    <td>{{ user.birthdate|date('F j,Y, g:i a') }}</td>
                    <td>{{ user.phone }}</td>
                    <td>{{ user.address }}</td>
                    <td class=" action">
                        <a href="{{ path('user_view', {'id': user.id}) }} " class='btn btn-success'>View</a>
                        <a href="{{ path('user_update', {'id': user.id}) }}" class='btn btn-info'>Update</a>
                        <a href="{{ path('user_delete', {'id': user.id}) }}" class='btn btn-danger'>Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('user_create') }}" class="btn btn-primary">Create new</a>
    </section>
{% endblock %}